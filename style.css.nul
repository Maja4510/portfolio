/***** tilbage-knap *****/
.back-button {
  display: inline-flex;
  align-items: center;
  text-decoration: none;
  color: #583a13;
  font-family: "Poppins", sans-serif;
  font-size: 1rem;
  transition: color 0.3s;
  padding: 10px 20px;
}

.back-button .arrow {
  display: inline-block;
  width: 10px;
  height: 10px;
  border-top: 2px solid #333;
  border-left: 2px solid #333;
  transform: rotate(-45deg);
  margin-right: 6px;
}

.back-button:hover {
  color: #f29c1b;
}

.back-button:hover .arrow {
  border-color: #f29c1b;
}

@media (max-width: 768px) {
  .back-button {
    font-size: 0.9rem;
    padding: 8px 15px;
  }

  .back-button .arrow {
    width: 8px;
    height: 8px;
  }
}
